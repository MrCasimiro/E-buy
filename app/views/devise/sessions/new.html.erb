<div class="col-10" style="margin: 0px; padding: 0px">
  <b><h2 class="text-primary" align="center">Entrar</h2></b>
    <div class="bg-light" align="center"><br />
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
				<%= f.email_field :email, autofocus: true, autocomplete: "email",
				 :placeholder => 'E-mail' %>
			</div>
			<br />
			<div class="field">
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Senha" %>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="field">
					<%= f.check_box :remember_me %>
					<%= f.label "Lembrar-me" %>
				</div>
			<% end -%>

			<div class="actions">
				<%= f.submit "Entrar", class: "btn btn-primary" %>
			</div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
