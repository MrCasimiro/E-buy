<div class="col-10" style="margin: 0px; padding: 0px">
  <b><h2 class="text-primary" align="center">Cadastrar</h2></b>
    <div class="bg-light" align="center"><br />

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div class="field">
				<%= f.text_field :name, autofocus: true, :placeholder => 'Nome' %>
			</div>
			<br />
			<div class="field">
				<%= f.telephone_field :phone, :placeholder => 'Telefone' %>
			</div>
			<br />
			<div class="field">
				<%= f.email_field :email,  autocomplete: "email", :placeholder => 'E-mail' %>
			</div>
			<br />
			<div class="field">
				<%= f.password_field :password, autocomplete: "off",
					:placeholder => 'Senha' %>
			</div>
			<br />
			<div class="field">
				<%= f.password_field :password_confirmation, autocomplete: "off",
					:placeholder => 'Confirme a senha' %>
			</div>
			<br />
			<div class="actions">
				<%= f.submit "Cadastrar", class: "btn btn-primary" %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
